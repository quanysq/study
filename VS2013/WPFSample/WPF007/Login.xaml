<Window x:Class="WPF007.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="帐号：" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="5,0" />
        <TextBlock Text="密码：" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Margin="5,0" />
        <TextBox Text="" x:Name="LoginName" Grid.Column="1" Grid.Row="0" BorderBrush="Black" Height="25" Margin="5" />
        <TextBox Text="" x:Name="LoginPassword" Grid.Column="1" Grid.Row="1" BorderBrush="Black" Height="25" Margin="5" />
        
        <Button Content="登录" Grid.Column="2" Grid.Row="2" Height="25" Width="50" HorizontalAlignment="Left" Margin="5" />
        <Button Content="取消" Grid.Column="2" Grid.Row="2" Height="25" Width="50" HorizontalAlignment="Left" Margin="60,5,5,5" />
    </Grid>
</Window>
